<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iheima.mapper.ClazzMapper">
    <insert id="insert" parameterType="com.iheima.pojo.Cla">
        INSERT INTO clazz VALUES (null,#{name},#{room},#{beginDate},#{endDate},#{masterId}, #{subject},#{createTime},#{updateTime})
    </insert>

    <select id="list" resultType="com.iheima.pojo.Cla">
        SELECT 
            c.*,
            e.name as masterName,
            (CASE WHEN begin_date &gt; now() THEN '未开班' 
                  WHEN now() &gt; end_date THEN '已结课'
                  ELSE '在读中' END) as status
        FROM clazz c LEFT JOIN emp e ON c.master_id = e.id
        <where>
            <if test="name != null and name != ''">
                c.name LIKE concat('%', #{name}, '%')
            </if>
            <if test="begin != null and end != null">
                AND c.begin_date BETWEEN #{begin} AND #{end}
            </if>
        </where>
        ORDER BY c.update_time DESC
    </select>

    <select id="getInfo" resultType="com.iheima.pojo.Cla">
        SELECT * FROM clazz WHERE id = #{id}
    </select>

    <update id="update" parameterType="com.iheima.pojo.Cla">
        UPDATE clazz 
        <set>
            <if test="name != null and name != ''">
                name = #{name}, 
            </if>
            <if test="room != null and room != ''">
                room = #{room}, 
            </if>
            <if test="beginDate != null">
                begin_date = #{beginDate}, 
            </if>
            <if test="endDate != null">
                end_date = #{endDate}, 
            </if>
            <if test="masterId != null">
                master_id = #{masterId}, 
            </if>
            <if test="subject != null">
                subject = #{subject}, 
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime} 
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM clazz WHERE id = #{id}
    </delete>

    <select id="findAll" resultType="com.iheima.pojo.Cla">
        SELECT * FROM clazz
    </select>
</mapper>
